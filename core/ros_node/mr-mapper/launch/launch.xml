<launch>
    <!-- Launch rtabmap -->
    <include file="$(find mr-mapper)/launch/launch_rtabmap.xml" />

    <!-- Launch camera publisher -->
    <node name="camera_publisher" pkg="mr-mapper" type="camera_publisher.py" output="screen"></node>

    <!-- Launch unity subscriber -->
    <node name="odom_to_unity" pkg="mr-mapper" type="odom_to_unity.py" output="screen"></node> 

    <!-- Launch unity subscriber -->
    <node name="pcd_to_unity" pkg="mr-mapper" type="pcd_to_unity.py" output="screen"></node> 

    <!-- Launch segmentation -->
    <node name="sense_making" pkg="mr-mapper" type="sense_making.py" output="screen"></node> 
    
</launch>